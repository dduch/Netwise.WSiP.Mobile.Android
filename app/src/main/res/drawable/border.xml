<?xml version="1.0" encoding="utf-8"?>

<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:drawable="@color/wsip_accent_color_light" android:state_pressed="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:centerColor="@android:color/transparent"
                android:centerX="0.01"
                android:startColor="#000" />
        </shape>
    </item>

    <item android:drawable="@color/wsip_accent_color_light" android:state_checked="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:centerColor="@android:color/transparent"
                android:centerX="0.01"
                android:startColor="#000" />
        </shape>
    </item>
    <item android:drawable="@color/wsip_accent_color_light" android:state_focused="true">
        <shape xmlns:android="http://schemas.android.com/apk/res/android"
            android:shape="rectangle" >
            <gradient
                android:angle="270"
                android:centerColor="@android:color/transparent"
                android:centerX="0.01"
                android:startColor="#000" />
        </shape>
    </item>
</selector>

